<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/dialog_panel">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout Confirmation"
        android:textSize="15sp"
        android:textColor="@color/grey70"
        android:textStyle="bold"
        android:id="@+id/dialogChoosePhoto"
        android:gravity="center"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey70"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/text_confirm_logout"
        android:textSize="12sp"
        android:textColor="@color/grey70"
        android:id="@+id/dialogOpenCamera"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey70"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/noBtn"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="5"
            android:text="No"
            android:background="@drawable/btn_grey"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/yesBtn"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="5"
            android:text="Yes"
            android:background="@drawable/btn_basic"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textColor="@color/white"/>

    </LinearLayout>


</LinearLayout>